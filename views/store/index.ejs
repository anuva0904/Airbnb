<%- include("../partials/head") %>
  <style>
  /* ==== Global Styles ==== */
body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
  color: #333;
}

h1, h2, h3 {
  margin: 0;
  color: #333;
}

/* ==== Header & Navigation ==== */
header {
  background-color: #ff5a5f;
  padding: 1rem 2rem;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
}

nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

nav ul {
  list-style: none;
  display: flex;
  margin: 0;
  padding: 0;
}

nav li {
  margin-left: 20px;
}

nav a {
  text-decoration: none;
  color: white;
  font-weight: bold;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

nav a:hover {
  background-color: #e54e52;
}

form button {
  background-color: #ff5a5f;
  color: white;
  padding: 0.5rem 1.25rem;
  font-size: 1rem;
  font-weight: bold;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

form button:hover {
  background-color: #e54e52;
}

form {
  display: inline;
}

/* ==== Main Section Shared ==== */
main,
.home-main {
  max-width: 900px;
  margin: 3rem auto;
  padding: 2rem;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  text-align: center;
}

/* ==== Add Home Button ==== */
.add-home-btn {
  display: inline-block;
  background-color: #ff5a5f;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 4px;
  text-decoration: none;
  font-weight: bold;
  margin-bottom: 2rem;
  transition: background-color 0.3s ease;
}

.add-home-btn:hover {
  background-color: #e54e52;
}

/* ==== Home List (Text-only View) ==== */
.home-list {
  list-style: none;
  padding: 0;
  text-align: left;
}

.home-list li {
  background-color: #f0f0f0;
  margin-bottom: 0.5rem;
  padding: 0.75rem 1rem;
  border-radius: 4px;
  font-weight: 500;
}

/* ==== Home Cards (Image Grid View) ==== */
.home-card-list {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  justify-content: center;
}

.home-card {
  width: 260px;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  background-color: #fafafa;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  text-align: left;
  transition: transform 0.2s ease;
}

.home-card:hover {
  transform: translateY(-4px);
}

.home-img {
  width: 100%;
  height: 160px;
  object-fit: cover;
}

.home-info {
  padding: 1rem;
}

.home-info h3 {
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
}

.home-info p {
  margin: 0.4rem 0;
  font-size: 0.9rem;
  color: #555;
}

.home-info button {
  margin-top: 0.75rem;
  padding: 0.5rem 1rem;
  background-color: #007bff;
  border: none;
  border-radius: 6px;
  color: white;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.home-info button:hover {
  background-color: #0056b3;
}
  </style>
</head>
<body>
  <%- include("../partials/nav") %>
  <main class="home-main">
    <h1>Properties</h1> <br>
    <div class="home-card-list">
      <% registeredhome.forEach(home => { %>
        <div class="home-card">
          <img src="<%= home.photo %>" alt="Home Image" class="home-img">
          <div class="home-info">
            <h3><%= home.houseName %></h3>
            <p><strong>Location:</strong> <%= home.location %></p>
            <p><strong>Price:</strong> ₹<%= home.price %> / night</p>
            <p><strong>Rating:</strong> ⭐ <%= home.rating %></p>
            <button>Book</button>
          </div>
          
        </div>
      <% }) %>
    </div>
  </main>
  
</body>
</html>